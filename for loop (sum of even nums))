import java.util.*;
public class Main {
   
   public static void main(String[] args) {
      Scanner s=new Scanner(System.in);
      
      System.out.println("enter an integer: ");
      
      int a;
      a=s.nextInt();
   
      int sum=0;
   for (int i = 1; i <= a; i++) {
      
      if (i % 2 == 0)
      {
      sum += i; 
      }
   }
   System.out.println("the sum of even number is : " + sum);
   }
   
}
